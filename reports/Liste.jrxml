	<queryString>
		<![CDATA[SELECT
     CONCAT(UNIT."NAME",UNIT."LASTNAME",UNIT."NAME_PART",UNIT."FIRSTNAME") AS UNAME,
     UNIT."ID" AS UNIT_ID,
     UNIT."NATION" AS UNIT_NATION,
     UNIT."SALUTATION" AS UNIT_SALUTATION,
     UNIT."NOTE" AS UNIT_NOTE,
